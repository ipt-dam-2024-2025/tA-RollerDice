<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simulador de lançamento de Dado"
        android:textAlignment="center"
        android:textColor="@color/red"
        android:textSize="18sp" />


    <!-- texto a representar o valor do DADO -->
    <TextView
        android:id="@+id/textViewValorDado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text=""
        android:textSize="40sp"
        android:textStyle="bold" />

    <!-- contentor da imagem do dado -->
    <ImageView
        android:id="@+id/imageViewDado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/empty_dice"
        />

    <!-- botão para forçar a rotação do dado -->
    <Button
        android:id="@+id/btRollDice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/textoBT"
        android:textSize="18sp" />

</LinearLayout>